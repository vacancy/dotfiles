import multiprocessing.pool
import subprocess
import queue

def work(i):
    try:
        output = subprocess.check_output(
            "ssh -o ConnectTimeout=3 -o BatchMode=yes -o StrictHostKeyChecking=no -o ClearAllForwardings=yes visiongpu{:02d} ls /mnt/*/".format(i).split(),
            stderr=subprocess.STDOUT,
        )
        output = output.decode('utf8').strip()
        output = 'gpu{:02d}:\n  '.format(i) + output.replace('\n', '\n  ')
        return output
    except Exception as e:
        print(e)
        pass

    return None

pool = multiprocessing.pool.ThreadPool(4)
results = pool.map(work, list(range(2, 55 + 1)))

print(*[r for r in results if r is not None], sep='\n')

